{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*", "VERCEL*"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": ["package.json", "tsconfig.json"],
  "remoteCache": {
    "enabled": false
  }
}
